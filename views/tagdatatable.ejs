<script>

  var tagTable = document.getElementById('tagtable');

  getdata();

    function getdata() {
        $(document).ready(function () {

          var table = $('#tagtable').DataTable({
            "processing": true,
            "serverSide": true,
            "ajax": {
              "url": '/gettag',
              "type": "POST"
            },
            "columns": [
              { "data": "_id" },
              { "data": "Name" },
              { "data": "Owner" },
              { "data": "DateCreated" },
              { "data": "Actions", "orderable": false, "searchable": false }
            ],
            "order": [[1, "asc"]],
            "columnDefs": [
              {
                "targets": [-1],
                "render": function (data, type, meta, row) {
                  return '<center><a class="btn btn-sm deleteTagbtn" onclick="deleteTag()" ><span class="fa fa-trash"></span></a></center>'
                }
              },
              {
                "targets": [0],
                "visible": false
              },
            ],
            "contentType": "application/json"

          });
          $('#tagtable').on('click', 'tr', function () {
            var id = (table.row(this).data()._id);
            deleteTag(id);
          });

        });

        
      }
